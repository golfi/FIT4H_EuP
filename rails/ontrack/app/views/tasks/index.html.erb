<p id="notice"><%= notice %></p>

<h1>Listing Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Anzeigen</th>
      <th>Bearbeiten</th>
      <th>Löschen</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.description %></td>
        <td><%= task.start_date %></td>
        <td><%= task.end_date %></td>
        <td><%= link_to "Anzeigen", project_task_path(task.project.id,task.id)%></td>
        <td><%= link_to "Bearbeiten", edit_project_task_path(task.project.id,task.id) %></td>
        <td><%= link_to "Löschen", project_task_path(task.project.id,task.id), method: :delete, data: {confirm: "Sicher???"} %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>



<ul class="button-group even-3">
  <li><%= link_to 'New Task', new_project_task_path, class: "button" %></li>
</ul>
